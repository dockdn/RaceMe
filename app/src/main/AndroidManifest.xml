<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raceme">

    <!-- Network (Firebase/Auth/Firestore) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Location (StartRunActivity tracking) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="RaceMe"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RaceMe">

        <!-- ===========================
             NORMAL MODE (Login first)
             =========================== -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- PRESENTATION MODE
             To use, comment out LoginActivity above and uncomment below -->
        <!--
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        -->

        <!-- Reminders screen -->
        <activity android:name=".RemindersActivity" />

        <!-- Alarm receiver for reminders -->
        <receiver
            android:name=".ReminderReceiver"
            android:exported="false" />

        <activity android:name=".FeedActivity" />
        <activity android:name=".NewPostActivity" />

        <!-- Other screens -->
        <activity android:name=".HomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".StartRunActivity" />
        <activity android:name=".CreateRaceActivity" />
        <activity android:name=".ChallengesActivity" />
        <activity android:name=".ReportsActivity" />
        <activity android:name=".BadgesActivity" />
        <activity android:name=".TracksActivity" />
        <activity android:name=".RunsActivity" />
        <activity android:name=".FriendRequestsActivity" />
        <activity android:name=".LeaderboardActivity" />
        <activity android:name=".StepCounterActivity" />
        <activity android:name=".EventsActivity" />
        <activity android:name=".CreateEventActivity" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" />
        <!-- Google Play Services version -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA-Vy1OlbnwQKOEHWFJYbEoaZGB60PdUIw" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>
</manifest>
