<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="#F3D9C7"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="Run Details"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#B64D4D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Run / Race Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Name this run or event"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address / Location Search -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputAddressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Location (address or place name)"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:inputType="textCapSentences|textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Reusable Track Switch -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchSaveTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save as reusable track"
            android:layout_marginTop="14dp" />

        <!-- Public / Private Switch -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchPublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make public"
            android:layout_marginTop="6dp" />

        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start run"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                app:backgroundTint="#B64D4D"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
