<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- header bar -->
        <LinearLayout
            android:id="@+id/headerCreateRace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBackCreateRace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvCreateRaceHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Create track"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/vt323"
                android:textColor="#B64D4D" />
        </LinearLayout>

        <!-- card container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:padding="16dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="#F3D9C7"
            app:strokeWidth="1dp"
            android:elevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- header text -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create public track"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#B64D4D"
                    android:fontFamily="@font/vt323"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name your route, set a distance, and add where it starts ðŸ—ºï¸"
                    android:textSize="18sp"
                    android:textColor="#6B2C2C"
                    android:fontFamily="@font/vt323"
                    android:layout_marginBottom="16dp" />

                <!-- track name label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track name"
                    android:textSize="16sp"
                    android:textColor="#6B2C2C"
                    android:fontFamily="@font/vt323" />

                <!-- track name input -->
                <EditText
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/retro_bar_bg"
                    android:padding="12dp"
                    android:hint="e.g. Boardwalk Sunset Loop"
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp" />

                <!-- TYPE DROPDOWN -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type of run"
                    android:textSize="16sp"
                    android:textColor="#6B2C2C"
                    android:fontFamily="@font/vt323" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutType"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Select type"
                    app:boxStrokeColor="#B64D4D"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/inputType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:fontFamily="@font/vt323"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- distance label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance (miles)"
                    android:textSize="16sp"
                    android:textColor="#6B2C2C"
                    android:fontFamily="@font/vt323" />

                <!-- distance input -->
                <EditText
                    android:id="@+id/inputDistanceMiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/retro_bar_bg"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:hint="e.g. 3.10"
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp" />

                <!-- description label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textColor="#6B2C2C"
                    android:fontFamily="@font/vt323" />

                <!-- description input -->
                <EditText
                    android:id="@+id/inputDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:maxLines="4"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/retro_bar_bg"
                    android:padding="12dp"
                    android:hint="Flat? Hilly? Good for sunsets? Add notes here."
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp" />

                <!-- location label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting location (optional)"
                    android:textSize="16sp"
                    android:textColor="#6B2C2C"
                    android:fontFamily="@font/vt323" />

                <!-- location input -->
                <EditText
                    android:id="@+id/inputLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/retro_bar_bg"
                    android:padding="12dp"
                    android:hint="e.g. Hofstra University, Hempstead, NY"
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp" />

                <!-- visibility toggle row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Make this track public"
                        android:textSize="16sp"
                        android:textColor="#6B2C2C"
                        android:fontFamily="@font/vt323" />

                    <Switch
                        android:id="@+id/switchPublic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <!-- buttons row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:backgroundTint="#DDDDDD"
                        android:textColor="#333333"
                        android:fontFamily="@font/vt323"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save track"
                        android:textAllCaps="false"
                        android:backgroundTint="#B64D4D"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/vt323" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
