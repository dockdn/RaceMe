<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2"
    android:padding="32dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Icon -->
        <TextView
            android:id="@+id/loginEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:textSize="64sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp" />

        <!-- Big title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#B64D4D"
            android:fontFamily="@font/vt323"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weâ€™ll email you a reset link for your RaceMe account."
            android:textSize="18sp"
            android:textColor="#6B6B6B"
            android:fontFamily="@font/vt323"
            android:layout_marginBottom="32dp" />

        <!-- Email label -->
        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#B64D4D"
            android:fontFamily="@font/vt323"
            android:layout_marginBottom="4dp" />

        <!-- Email input box -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxBackgroundColor="#FFFFFF"
            app:startIconDrawable="@android:drawable/ic_dialog_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="you@example.com"
                android:fontFamily="@font/vt323"
                android:textColor="#2D2D2D"
                android:textSize="20sp"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- error linefor kotlin -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#B64D4D"
            android:fontFamily="@font/vt323"
            android:layout_marginTop="8dp" />

        <!-- Send link button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send reset link"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:fontFamily="@font/vt323"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            app:cornerRadius="18dp"
            app:backgroundTint="#B64D4D" />

        <!-- Cancel button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="@font/vt323"
            android:textColor="#555555"
            android:layout_marginBottom="20dp"
            app:cornerRadius="18dp"
            app:backgroundTint="#EEEEEE" />

        <!-- Links to login / register -->
        <TextView
            android:id="@+id/linkLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember your password? Sign in"
            android:textSize="18sp"
            android:textColor="#B64D4D"
            android:fontFamily="@font/vt323"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/linkRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need an account? Register"
            android:textSize="18sp"
            android:textColor="#B64D4D"
            android:fontFamily="@font/vt323"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</ScrollView>
