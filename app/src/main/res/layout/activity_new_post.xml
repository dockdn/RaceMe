<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header: title + subtitle -->
        <TextView
            android:id="@+id/tvNewPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a post"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#B64D4D"
            android:fontFamily="@font/vt323"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvNewPostSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your run, wins, or a boost of motivation âœ¨"
            android:textSize="18sp"
            android:textColor="#6B6B6B"
            android:fontFamily="@font/vt323"
            android:layout_marginBottom="20dp" />

        <!-- Main card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:padding="18dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="#F3D9C7"
            app:strokeWidth="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Label for text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caption"
                    android:textSize="18sp"
                    android:textColor="#B64D4D"
                    android:fontFamily="@font/vt323"
                    android:layout_marginBottom="4dp" />

                <!-- Caption field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Whatâ€™s on your mind?"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#B64D4D"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:maxLines="6"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/vt323"
                        android:textColor="#2D2D2D"
                        android:hint="Tell your followers about your run, how you felt, or a tipâ€¦" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Label for image -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photo (optional)"
                    android:textSize="18sp"
                    android:textColor="#B64D4D"
                    android:fontFamily="@font/vt323"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <!-- Image preview -->
                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#FFF3EA"
                    android:adjustViewBounds="true"
                    android:contentDescription="Selected photo preview"
                    android:padding="4dp" />

                <!-- Hint under preview -->
                <TextView
                    android:id="@+id/tvPhotoHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add a photo of your route, shoes, or post-run glow âœ¨"
                    android:textSize="14sp"
                    android:textColor="#7A7A7A"
                    android:fontFamily="@font/vt323"
                    android:layout_marginTop="6dp" />

                <!-- Buttons row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPickImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add photo ðŸ“·"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:fontFamily="@font/vt323"
                        android:textColor="#4A1C1C"
                        app:cornerRadius="18dp"
                        app:backgroundTint="#D9A08E" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/vt323"
                        android:textColor="@android:color/white"
                        app:cornerRadius="18dp"
                        app:backgroundTint="#B64D4D" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
