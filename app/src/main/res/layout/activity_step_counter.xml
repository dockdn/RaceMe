<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF7F8FA">

    <!-- Screen title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Step Tracker"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

    <!-- Card with main stats -->
    <LinearLayout
        android:id="@+id/layoutStatsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Big steps text -->
        <TextView
            android:id="@+id/tvSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps Taken: 0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- Goal text (small label under steps) -->
        <TextView
            android:id="@+id/tvStepGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step Goal: Not Set"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center_horizontal"
            android:layout_marginTop="2dp" />

        <!-- Progress % centered above bar -->
        <TextView
            android:id="@+id/tvProgressPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0% of goal"
            android:textSize="14sp"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Horizontal progress bar -->
        <ProgressBar
            android:id="@+id/progressSteps"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:progress="0"
            android:max="100"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

    <!-- Goal input area at bottom -->

    <LinearLayout
        android:id="@+id/layoutGoalControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvGoalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set or update your step goal"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etStepGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter step goal (e.g. 8000)"
            android:inputType="number"
            android:padding="10dp"
            android:background="@android:drawable/edit_text" />

        <Button
            android:id="@+id/btnSetGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Goal"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Steps"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
