<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2"
    android:padding="32dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo (Emoji Placeholder, CHANGE AFTER) -->
        <TextView
            android:id="@+id/loginEmoji"
            android:text="ðŸ"
            android:textSize="64sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Big Title -->
        <TextView
            android:id="@+id/title"
            android:text="RaceMe"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="#B64D4D"
            android:fontFamily="@font/vt323"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/subtitle"
            android:text="Where progress becomes a habit âœ¨"
            android:textSize="20sp"
            android:textColor="#6B6B6B"
            android:fontFamily="@font/vt323"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:backgroundTint="#FFFFFF"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxBackgroundColor="#FFFFFF"
            app:startIconDrawable="@android:drawable/ic_dialog_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmail"
                android:fontFamily="@font/vt323"
                android:textColor="#2D2D2D"
                android:textSize="20sp"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxBackgroundColor="#FFFFFF"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@android:drawable/ic_lock_idle_lock">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPassword"
                android:fontFamily="@font/vt323"
                android:textColor="#2D2D2D"
                android:textSize="20sp"
                android:padding="10dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:fontFamily="@font/vt323"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="18dp"
            app:backgroundTint="#B64D4D" />

        <!-- Create an account -->
        <TextView
            android:id="@+id/linkRegister"
            android:text="New here? Create an account â†’"
            android:textColor="#B64D4D"
            android:textSize="18sp"
            android:fontFamily="@font/vt323"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Another Tagline -->
        <TextView
            android:id="@+id/quote"
            android:text="â€œSmall steps today.\nBig races tomorrow.â€"
            android:textColor="#7A7A7A"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/vt323"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
