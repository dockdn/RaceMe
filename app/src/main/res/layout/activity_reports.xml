<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with back arrow -->
        <LinearLayout
            android:id="@+id/headerReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBackReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Reports"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/vt323"
                android:textColor="#B64D4D" />
        </LinearLayout>

        <!-- White content card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginTop="8dp">

            <!-- Summary header -->
            <TextView
                android:id="@+id/tvSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/vt323"
                android:textColor="#B64D4D"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTotals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 mi • 0 min • 0 runs"
                android:textSize="16sp"
                android:textColor="#8B3E3E"
                android:layout_marginBottom="12dp" />

            <!-- Range toggle -->
            <RadioGroup
                android:id="@+id/groupRange"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/rbWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly"
                    android:textColor="#2D2D2D"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly"
                    android:textColor="#2D2D2D"
                    android:layout_marginStart="16dp" />
            </RadioGroup>

            <!-- Empty state -->
            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No data yet — start a run!"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#B64D4D"
                android:padding="16dp"
                android:visibility="gone"
                android:background="#FFE5CC"
                android:layout_marginBottom="8dp" />

            <!-- Label for miles chart -->
            <TextView
                android:id="@+id/tvMilesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miles per Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/vt323"
                android:textColor="#B64D4D"
                android:layout_marginTop="12dp" />

            <!-- Miles chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chartMiles"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="4dp"
                android:background="#FFF2ED"
                android:padding="4dp" />

            <!-- Label for minutes chart -->
            <TextView
                android:id="@+id/tvMinutesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes per Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/vt323"
                android:textColor="#B64D4D"
                android:layout_marginTop="16dp" />

            <!-- Time chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chartTime"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="#FFF2ED"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
