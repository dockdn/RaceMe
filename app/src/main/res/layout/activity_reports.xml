<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Week"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/vt323"
            android:textColor="#2D2D2D"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvTotals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 mi • 0 min • 0 runs"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="12dp" />

        <!-- Range toggle -->
        <RadioGroup
            android:id="@+id/groupRange"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Empty state -->
        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No data yet — start a run!"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#8B3E3E"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Miles chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartMiles"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="12dp" />

        <!-- Time chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartTime"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
